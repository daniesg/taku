<!DOCTYPE html>
<html>
  <head>
    <% if content_for :title %>
      <title><%= yield :title %> | Taku</title>
    <% else %>
      <title>Taku</title>
    <% end %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-Bx4pytHkyTDy3aJKjGkGoHPt3tvv6zlwwjc3iqN7ktaiEMLDPqLSZYts2OjKcBx1" crossorigin="anonymous">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <% if content_for :css %>
      <%= yield :css %>
    <% end %>

    <%= javascript_include_tag 'application' %>
    <% if content_for :js %>
      <%= yield :js %>
    <% end %>

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#80c4b7">
    <meta name="msapplication-TileColor" content="#80c4b7">
    <meta name="theme-color" content="#80c4b7">
  </head>

  <body>
    <% if content_for? :application_body %>
      <%= yield :application_body %>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
