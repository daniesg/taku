<% unless resource.errors.empty? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <% resource.errors.full_messages.each do |message|%>
      <p class="text-white small mb-1"><%= message %></p>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <i class="fal fa-times"></i>
    </button>
  </div>
<% end %>
<%= image_tag "logos/main.svg", class: "devise-logo" %>
<h1 class="devise-heading"><%= t ".heading" %></h1>
<h2 class="devise-sub-heading"><%= t ".subheading" %></h2>

<%= form_for(resource,
             as: resource_name,
             url: confirmation_path(resource_name),
             html: { method: :post, class: "mt-6" }) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
      placeholder: t("devise.labels.email"),
      value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
      class: "form-control devise-input mb-5" %>
  </div>

  <%= f.submit t(".action"), class: "btn btn-success devise-btn mt-5 mb-6" %>
<% end %>

<%= link_to t(".login"), new_session_path(resource_name) %>
<br>
<%= link_to t(".signup"), new_registration_path(resource_name) %>
<p class="mt-1"><%= t ".help" %></p>
<%= link_to t(".help_link"), new_password_path(resource_name),
            class: "btn btn-secondary devise-btn mt-4" %>
