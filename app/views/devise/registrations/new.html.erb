<% unless resource.errors.empty? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <% resource.errors.full_messages.each do |message|%>
      <p class="text-white small mb-1"><%= message %></p>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <i class="fal fa-times"></i>
    </button>
  </div>
<% end %>
<%= image_tag "logos/main.svg", class: "devise-logo" %>
<h1 class="devise-heading">Signup</h1>
<h2 class="devise-sub-heading">Create a new account</h2>

<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: { class: "mt-6" }) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      placeholder: "Email",
                      class: "form-control devise-input mb-5" %>
  </div>

  <div class="form-group">
    <%= f.text_field :name, autocomplete: "name",
                      placeholder: "Name",
                      class: "form-control devise-input mb-5" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password,
                         autocomplete: "new-password",
                         placeholder: "Password",
                         class: "form-control devise-input" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         placeholder: "Password Confirmation",
                         class: "form-control devise-input" %>
  </div>

  <%= f.submit "SIGNUP", class: "btn btn-success devise-btn mt-5 mb-6" %>
<% end %>

<%= link_to "Forgot your password?", new_password_path(resource_name) %>
<br>
<%= link_to "Didn't receive confirmation instructions?",
            new_confirmation_path(resource_name) %>
<p class="mt-1">Already have an account?</p>
<%= link_to "LOGIN", new_session_path(resource_name),
            class: "btn btn-secondary devise-btn mt-4" %>
