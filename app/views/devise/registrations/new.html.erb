<% unless resource.errors.empty? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <% resource.errors.full_messages.each do |message|%>
      <p class="text-white small mb-1"><%= message %></p>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <i class="fal fa-times"></i>
    </button>
  </div>
<% end %>
<%= image_tag "logos/main.svg", class: "devise-logo" %>
<h1 class="devise-heading"><%= t ".heading" %></h1>
<h2 class="devise-sub-heading"><%= t ".subheading" %></h2>

<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: { class: "mt-6" }) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      placeholder: t("devise.labels.email"),
                      class: "form-control devise-input mb-5" %>
  </div>

  <div class="form-group">
    <%= f.text_field :name, autocomplete: "name",
                      placeholder: t("devise.labels.name"),
                      class: "form-control devise-input mb-5" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password,
                         autocomplete: "new-password",
                         placeholder: t("devise.labels.password"),
                         class: "form-control devise-input" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         placeholder: t("devise.labels.password_confirmation"),
                         class: "form-control devise-input" %>
  </div>

  <%= f.submit t(".action"), class: "btn btn-success devise-btn mt-5 mb-6" %>
<% end %>

<%= link_to t(".password"), new_password_path(resource_name) %>
<br>
<%= link_to t(".confirmation"),
            new_confirmation_path(resource_name) %>
<p class="mt-1"><%= t ".help" %></p>
<%= link_to t(".help_link"), new_session_path(resource_name),
            class: "btn btn-secondary devise-btn mt-4" %>
